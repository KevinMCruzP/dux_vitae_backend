datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator erd {
  provider = "prisma-erd-generator"
}

generator client {
  provider = "prisma-client-js"
}

model Client {
  rut          String         @id
  email        String         @unique
  name         String
  lastName     String
  password     String
  role         String
  created_at   DateTime       @default(now())
  updated_at   DateTime       @updatedAt
  chat         Chat[]
  nutritionist Nutritionist[]
  appointment  Appointment?

  @@map("clients")
}

model Nutritionist {
  rut         String        @id
  email       String        @unique
  name        String
  lastName    String
  password    String
  role        String
  created_at  DateTime      @default(now())
  updated_at  DateTime      @updatedAt
  chat        Chat[]
  appointment Appointment[]
  certificate Certificate?
  client      Client[]

  @@map("nutritionists")
}

model Chat {
  idMessage       String       @id @default(cuid())
  message         String
  created_at      DateTime     @default(now())
  nutritionist    Nutritionist @relation(fields: [nutritionistRut], references: [rut])
  client          Client       @relation(fields: [clientRut], references: [rut])
  nutritionistRut String
  clientRut       String

  @@map("chats")
}

model Admin {
  rut         String        @id
  email       String        @unique
  name        String
  lastName    String
  password    String
  role        String
  created_at  DateTime      @default(now())
  updated_at  DateTime      @updatedAt
  certificate Certificate[]

  @@map("admins")
}

model Certificate {
  idCertificate   String       @id @default(uuid())
  file            String
  state           Boolean
  created_at      DateTime     @default(now())
  updated_at      DateTime     @updatedAt
  admin           Admin        @relation(fields: [adminRut], references: [rut])
  adminRut        String
  nutritionist    Nutritionist @relation(fields: [nutritionistRut], references: [rut])
  nutritionistRut String       @unique

  @@map("certificates")
}

