  idAppointment   String       @id @default(uuid())
  title           String
  message         String
  created_at      DateTime     @default(now())
  updated_at      DateTime     @updatedAt
  nutritionist    Nutritionist @relation(fields: [nutritionistRut], references: [rut])
  nutritionistRut String

  @@map("appointments")
}

