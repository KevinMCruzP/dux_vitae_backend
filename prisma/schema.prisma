datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator erd {
  provider = "prisma-erd-generator"
  output   = "./ERD.svg"
  theme    = "dark"
}

generator client {
  provider = "prisma-client-js"
}

model Client {
  rut        String    @id
  name       String
  lastname   String
  email      String
  password   String
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  message    Message[]

  @@map("clients")
}

model Nutritionist {
  rut         String        @id
  name        String
  lastname    String
  email       String
  password    String
  created_at  DateTime      @default(now())
  updated_at  DateTime      @updatedAt
  message     Message[]
  appointment Appointment[]
  certificate Certificate?

  @@map("nutritionists")
}

model Message {
  idMessage       String       @id @default(cuid())
  message         String
  created_at      DateTime     @default(now())
  nutritionist    Nutritionist @relation(fields: [nutritionistRut], references: [rut])
  client          Client       @relation(fields: [clientRut], references: [rut])
  nutritionistRut String
  clientRut       String

  @@map("messages")
}

model Admin {
  rut         String        @id
  email       String
  password    String
  created_at  DateTime      @default(now())
  updated_at  DateTime      @updatedAt
  certificate Certificate[]

  @@map("admins")
}

model Certificate {
  idCertificate   String       @id @default(uuid())
  file            String
  state           Boolean
  created_at      DateTime     @default(now())
  updated_at      DateTime     @updatedAt
  admin           Admin        @relation(fields: [adminRut], references: [rut])
  adminRut        String
  nutritionist    Nutritionist @relation(fields: [nutritionistRut], references: [rut])
  nutritionistRut String       @unique

  @@map("certificates")
}

